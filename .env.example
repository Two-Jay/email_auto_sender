# 서버 설정
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# CORS 설정
CORS_ORIGINS=http://localhost:3000

# 메일 설정 - Naver
NAVER_SMTP_SERVER=smtp.naver.com
NAVER_SMTP_PORT=587
NAVER_EMAIL=your-email@naver.com
NAVER_PASSWORD=your-password

# 메일 설정 - Google
GOOGLE_SMTP_SERVER=smtp.gmail.com
GOOGLE_SMTP_PORT=587
GOOGLE_EMAIL=your-email@gmail.com
GOOGLE_APP_PASSWORD=your-app-password

# 파일 저장 경로
DATA_DIR=./data
UPLOAD_DIR=./backend/uploads

# 대량 발송 설정
BATCH_SIZE=10
DELAY_BETWEEN_EMAILS=2

# TinyMCE 설정 (선택사항)
# API 키가 없으면 GPL 셀프호스트 모드로 작동합니다
# https://www.tiny.cloud 에서 무료 API 키 발급 가능
VITE_TINYMCE_API_KEY=
